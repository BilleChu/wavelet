# OpenFinance Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Application
# ============================================
APP_NAME=OpenFinance
APP_ENV=development
DEBUG=1
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ============================================
# LLM API Keys
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://openfinance:openfinance@postgres:5432/openfinance
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================
# Redis
# ============================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:19100
CORS_ALLOW_CREDENTIALS=true

# ============================================
# External APIs
# ============================================
AKSHARE_TOKEN=
TUSHARE_TOKEN=
TAVILY_API_KEY=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

# ============================================
# Monitoring
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9001

# ============================================
# Frontend
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:19100
NEXT_PUBLIC_WS_URL=ws://localhost:19100
